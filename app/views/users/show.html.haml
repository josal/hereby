%h1= "#{@user.name}'s profile"

%p
  He's published
  =link_to("#{@user.messages_count} #{Message.model_name.human(count: @user.messages_count)}", messages_path(user_id: @user.id))

%p
  He's following
  =link_to("#{@user.following_count} #{User.model_name.human(count: @user.following_count)}", users_path(user_id: @user.id))

%p
  He's followed by
  =link_to("#{@user.followed_count} #{User.model_name.human(count: @user.followed_count)}", users_path(user_target_id: @user.id))

- if !@user.followed_by?(current_user.id)
  - if @user != current_user
    = link_to 'Follow user', follow_user_path(@user.id)
- else
  You're already following this user

%br
%br

= link_to 'Home', root_path
